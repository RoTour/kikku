generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --------------------------------------------------------
// Better Auth Models
// --------------------------------------------------------

enum SubscriptionTier {
  DISCOVER
  HOBBIST
  PRO
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  // Subscription & Credits
  tier               SubscriptionTier @default(DISCOVER)
  tokenBalance       Int              @default(0)
  subscriptionId     String?
  subscriptionStatus String?

  // App Relations
  projects Project[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// --------------------------------------------------------
// App Domain Models
// --------------------------------------------------------

model Project {
  id          String   @id @default(uuid())
  name        String
  description String? // High level idea
  status      String   @default("DRAFT") // DRAFT, COMPLETED, ARCHIVED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  conversations Conversation[]
  specVersions  SpecVersion[]

  @@map("projects")
}

model Conversation {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]

  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  role      String // "user", "assistant", "system"
  content   String // Text content
  createdAt DateTime @default(now())

  // For future use: references to generated artifacts?

  @@map("messages")
}

enum SpecStatus {
  PENDING
  GENERATING
  COMPLETED
  FAILED
}

model SpecVersion {
  id        String  @id @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  content   String // The full markdown content (or stored as JSON blob of files)
  status    SpecStatus @default(PENDING)
  createdAt DateTime   @default(now())

  @@map("spec_versions")
}
